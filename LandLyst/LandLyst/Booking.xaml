<Page x:Class="LandLyst.Booking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LandLyst"
      mc:Ignorable="d" 
      d:DesignHeight="379" d:DesignWidth="800"
      Title="Booking">
    <!--REMEMBER TO GET RID OF THESE FUCKING COLOURS!!-->
    <DockPanel>
        <Rectangle Fill="Coral" DockPanel.Dock="Left" Width="300"/>
        <StackPanel DockPanel.Dock="Left" Background="HotPink" Orientation="Vertical">
            <Rectangle Height="70"/>
            <TextBox x:Name="Navn" Text="Navn" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="Email" Text="Email" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="Telefon" Text="Telefon nr." FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="Addr" Text="Addresse" FontSize="16" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="By" Text="By" Width="100" FontSize="16" Margin="0,0,5,0"/>
                <TextBox x:Name="Postnr" Text="Post nr." Width="100" FontSize="16"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Background="GreenYellow" DockPanel.Dock="Right">
            <TextBlock Text="Pris i alt" FontSize="20" HorizontalAlignment="Center" Margin="0,50,0,0" />
            <Rectangle Height="220"/>
            <Button x:Name="BookVær" Content="Book Værelse" Height="30" Padding="5" HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Page>
