<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LandLyst"
      xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="LandLyst.VærelsesInfo"
      mc:Ignorable="d" 
      d:DesignHeight="379" d:DesignWidth="800"
      Title="VærelsesInfo">
    <!--REMEMBER TO GET RID OF THESE FUCKING COLOURS!!-->
    <DockPanel>
        <Rectangle  DockPanel.Dock="Left" Width="500" Fill="Aqua"/>
        <StackPanel Background="DarkBlue">
            <Rectangle Height="50"/>
            <DatePicker x:Name="datoStart" Width="100" FontSize="16" Margin="0,5,0,0"/>
            <DatePicker x:Name="datoSlut" Width="100" FontSize="16" Margin="0,5,0,0"/>
            <Rectangle Height="100"/>
            <TextBox Text="Total pris" HorizontalAlignment="Center"></TextBox>
            <TextBox x:Name="totalPris" Width="100"/>
            <Rectangle Height="50"/>
            <Button Content="Book værelse" Height="30" HorizontalAlignment="Center" Padding="5" Click="Bookroombtn_Click"/>
        </StackPanel>
    </DockPanel>
</Page>
