            <DataGridTextColumn Width="auto" Header="reservations Id" x:Name="rIdC"/>
            <DataGridTextColumn Width="auto" Header="Rum id" x:Name="roomIdC" />
            <DataGridTextColumn Width="auto" Header="Kunde email" x:Name="emailC"/>
            <DataGridTextColumn Width="auto" Header="Check ind dato" x:Name="ciDateC"/>
            <DataGridTextColumn Width="auto" Header="Check ud dato" x:Name="cuDateC"/>
        </DataGrid.Columns>
        
    </DataGrid>
