<Page x:Class="LandLyst.Reservationer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LandLyst"
      mc:Ignorable="d" 
      d:DesignHeight="379" d:DesignWidth="800"
      Title="Reservationer">

    <ListView x:Name="reservationer" ItemsSource="{Binding reader}">

        <ListView.View>

            <GridView >

                <GridViewColumn DisplayMemberBinding=
                          "{Binding reservation_id}" 
                      Header="Reservations id" Width="100"/>

                <GridViewColumn DisplayMemberBinding=
                          "{Binding fkroom_id}" 
                      Header="Rum id" Width="100">

                </GridViewColumn>

                <GridViewColumn DisplayMemberBinding=
                          "{Binding fkcustomer_email}" 
                      Header="Kunde email" Width="100"/>
            </GridView>

        </ListView.View>
    </ListView>

</Page>
